{% include('@VkHealthCare/navbar/header.php.twig') %}

<div class="container">
  <h2>Create Post</h2>
  <form action="{{path('userpost_action')}}" method="POST" enctype="multipart/form-data">
    <div class="form-group">
    <input type="hidden" name="updateId" value="{{userId}}">
      <label for="title">Title:</label>
      <input type="text" class="form-control" id="title" placeholder="Enter title" name="title" value="">
    </div>
    
     <div class="form-group">
      <label for="description">Description:</label>
      <textarea rows="4" cols="50" id="description" name="description"></textarea>
    </div>
     <div class="form-group">
      <label for="postfile">Image:</label>
      <input type="file" class="form-control" id="postfile"  name="postfile">
    </div>
    
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
</div>
